<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Anasayfaactivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/butonseçim"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/seçimresim"
        app:layout_constraintEnd_toEndOf="@+id/seçimresim"
        app:layout_constraintTop_toTopOf="@+id/seçimresim"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/seçimresim"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="264dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stopwatch"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>